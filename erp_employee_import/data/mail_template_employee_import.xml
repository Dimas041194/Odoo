<odoo>
    <record id="mail_employee_import_result" model="mail.template">
        <field name="name">Employee Import Result</field>
        <field name="model_id" ref="model_hr_employee_import_job"/>
        <field name="subject">Employee Import Job ${object.id} Result</field>
        <field name="email_from">
            ${(object.user_id.company_id.email or 'noreply@example.com')|safe}
        </field>
        <field name="email_to">${object.user_id.email}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html">
            <![CDATA[
<p>Employee import job ${object.id} has finished.</p>
<p>Total rows: ${object.total_rows}</p>
<p>Success: ${object.success_count}</p>
<p>Failed: ${object.failed_count}</p>
<pre>${object.log}</pre>
]]>
        </field>
    </record>
</odoo>
