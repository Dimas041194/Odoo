  <?xml version="1.0" encoding="utf-8"?>
  <odoo>
      <record id="view_purchase_invoice_ocr_form" model="ir.ui.view">
          <field name="name">account.move.form.ocr</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='partner_id']" position="after">
                  <group string="OCR AI Processing" col="2">
                      <field name="invoice_image" widget="image" class="oe_avatar" options="{'preview_image': 'invoice_image'}"/>
                      <button name="action_process_ocr" type="object" string="Proses OCR AI" class="btn-primary oe_highlight" 
                              attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
                      <field name="ocr_extracted_data" nolabel="1" readonly="1" widget="text" 
                             attrs="{'invisible': [('ocr_extracted_data', '=', False)]}" class="oe_inline"/>
                  </group>
              </xpath>
          </field>
      </record>
  </odoo>
  