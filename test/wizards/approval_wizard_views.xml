<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Wizard -->
    <record id="view_approval_wizard_form" model="ir.ui.view">
        <field name="name">approval.wizard.form</field>
        <field name="model">approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Approval Action">
                <group>
                    <field name="workflow_id" readonly="1"/>
                    <field name="action_type"/>
                    <field name="comments" placeholder="Enter your comments or reason..."/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Approval Wizard Action -->
    <record id="action_approval_wizard" model="ir.actions.act_window">
        <field name="name">Approval Action</field>
        <field name="res_model">approval.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Bulk Approval Wizard -->
    <record id="view_bulk_approval_wizard_form" model="ir.ui.view">
        <field name="name">bulk.approval.wizard.form</field>
        <field name="model">bulk.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Approval">
                <group>
                    <field name="workflow_ids" widget="many2many_tags"/>
                    <field name="action_type"/>
                    <field name="comments" placeholder="Enter your comments or reason..."/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bulk Approval Wizard Action -->
    <record id="action_bulk_approval_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Approval</field>
        <field name="res_model">bulk.approval.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Matrix Configuration Wizard -->
    <record id="view_matrix_config_wizard_form" model="ir.ui.view">
        <field name="name">matrix.config.wizard.form</field>
        <field name="model">matrix.config.wizard</field>
        <field name="arch" type="xml">
            <form string="Matrix Configuration">
                <group>
                    <field name="matrix_id"/>
                    <field name="workflow_type"/>
                    <field name="amount"/>
                    <field name="department_id"/>
                    <field name="category_id"/>
                </group>
                <group>
                    <field name="suggested_matrix" readonly="1"/>
                    <field name="custom_rules" widget="ace" options="{'mode': 'json'}"/>
                </group>
                <footer>
                    <button name="action_apply" string="Apply Configuration" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Matrix Configuration Wizard Action -->
    <record id="action_matrix_config_wizard" model="ir.actions.act_window">
        <field name="name">Matrix Configuration</field>
        <field name="res_model">matrix.config.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Notification Test Wizard -->
    <record id="view_notification_test_wizard_form" model="ir.ui.view">
        <field name="name">notification.test.wizard.form</field>
        <field name="model">notification.test.wizard</field>
        <field name="arch" type="xml">
            <form string="Test Notification">
                <group>
                    <field name="template_id"/>
                    <field name="test_email"/>
                    <field name="workflow_data" widget="ace" options="{'mode': 'json'}"/>
                </group>
                <footer>
                    <button name="action_send_test" string="Send Test" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Notification Test Wizard Action -->
    <record id="action_notification_test_wizard" model="ir.actions.act_window">
        <field name="name">Test Notification</field>
        <field name="res_model">notification.test.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
