    <record id="notification_template_rule_user" model="ir.rule">
        <field name="name">Notification Template: User Access</field>
        <field name="model_id" ref="model_notification_template"/>
        <field name="domain_force">[('active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Notification Log Rules -->
    <record id="notification_log_rule_manager" model="ir.rule">
        <field name="name">Notification Log: Manager Access</field>
        <field name="model_id" ref="model_notification_log"/>
