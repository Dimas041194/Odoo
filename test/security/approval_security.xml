    <record id="email_log_rule_user" model="ir.rule">
        <field name="name">Email Log: User Access</field>
        <field name="model_id" ref="model_email_log"/>
        <field name="domain_force">[('to_emails', 'ilike', user.email)]</field>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
