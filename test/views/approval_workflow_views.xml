<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Workflow Tree View -->
    <record id="view_approval_workflow_tree" model="ir.ui.view">
        <field name="name">approval.workflow.tree</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <tree string="Approval Workflows" decoration-info="state=='draft'" decoration-warning="state=='pending'" decoration-success="state=='approved'" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="workflow_type"/>
                <field name="requester_id"/>
                <field name="amount" sum="Total Amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='pending'" decoration-success="state=='approved'" decoration-danger="state=='rejected'"/>
                <field name="request_date"/>
                <field name="approval_deadline"/>
                <field name="current_level_sequence" string="Level"/>
                <field name="total_levels" string="Total Levels"/>
                <field name="approval_count" string="Approvals"/>
                <field name="approved_count" string="Approved"/>
                <field name="pending_count" string="Pending"/>
            </tree>
        </field>
    </record>

    <!-- Approval Workflow Form View -->
    <record id="view_approval_workflow_form" model="ir.ui.view">
        <field name="name">approval.workflow.form</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <form string="Approval Workflow">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['approved', 'rejected', 'cancelled'])]}"/>
                    <button name="action_escalate" string="Escalate" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Workflow Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="workflow_type"/>
                            <field name="requester_id" readonly="1"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="department_id"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="request_date" readonly="1"/>
                            <field name="approval_deadline" readonly="1"/>
                            <field name="approved_date" readonly="1"/>
                            <field name="rejected_date" readonly="1"/>
                            <field name="cancelled_date" readonly="1"/>
                            <field name="matrix_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="description_detail"/>
                    </group>
                    
                    <!-- Approval Levels Progress -->
                    <div class="oe_approval_progress" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <h3>Approval Progress</h3>
                        <div class="progress_bar">
                            <div class="progress_fill" style="width: 50%;"></div>
                        </div>
                        <div class="level_info">
                            <span>Level <field name="current_level_sequence" readonly="1"/> of <field name="total_levels" readonly="1"/></span>
                        </div>
                    </div>
                    
                    <!-- Approvals -->
                    <notebook>
                        <page string="Approvals" name="approvals">
                            <field name="approval_ids" readonly="1">
                                <tree string="Approvals" decoration-info="state=='pending'" decoration-success="state=='approved'" decoration-danger="state=='rejected'">
                                    <field name="level_id"/>
                                    <field name="approver_id"/>
                                    <field name="delegated_to_id"/>
                                    <field name="state" widget="badge"/>
                                    <field name="create_date"/>
                                    <field name="approved_date"/>
                                    <field name="rejected_date"/>
                                    <field name="deadline"/>
                                    <field name="processing_time"/>
                                    <field name="comments"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids"/>
                        </page>
                        <page string="Custom Data" name="custom_data">
                            <field name="custom_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Approval Workflow Search View -->
    <record id="view_approval_workflow_search" model="ir.ui.view">
        <field name="name">approval.workflow.search</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <search string="Search Approval Workflows">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="workflow_type"/>
                <field name="department_id"/>
                <field name="category_id"/>
                <field name="matrix_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="My Workflows" name="my_workflows" domain="[('requester_id', '=', uid)]"/>
                <filter string="Pending My Approval" name="pending_my_approval" domain="[('approval_ids.approver_id.user_id', '=', uid), ('approval_ids.state', '=', 'pending')]"/>
                <separator/>
                <filter string="Overdue" name="overdue" domain="[('approval_deadline', '&lt;', context_today())]"/>
                <filter string="This Week" name="this_week" domain="[('request_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Workflow Type" name="group_workflow_type" context="{'group_by': 'workflow_type'}"/>
                    <filter string="Requester" name="group_requester" context="{'group_by': 'requester_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Matrix" name="group_matrix" context="{'group_by': 'matrix_id'}"/>
                    <filter string="Request Date" name="group_request_date" context="{'group_by': 'request_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Approval Workflow Kanban View -->
    <record id="view_approval_workflow_kanban" model="ir.ui.view">
        <field name="name">approval.workflow.kanban</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <kanban string="Approval Workflows" class="o_kanban_small_column">
                <field name="state"/>
                <field name="name"/>
                <field name="workflow_type"/>
                <field name="requester_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="request_date"/>
                <field name="approval_deadline"/>
                <field name="current_level_sequence"/>
                <field name="total_levels"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="workflow_type"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_priority">
                                        <field name="state" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_details">
                                        <div class="o_kanban_record_detail">
                                            <strong>Requester:</strong> <field name="requester_id"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Amount:</strong> <field name="amount"/> <field name="currency_id"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Request Date:</strong> <field name="request_date"/>
                                        </div>
                                        <div class="o_kanban_record_detail" attrs="{'invisible': [('approval_deadline', '=', False)]}">
                                            <strong>Deadline:</strong> <field name="approval_deadline"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_progress" attrs="{'invisible': [('state', '=', 'draft')]}">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: 25%"></div>
                                        </div>
                                        <small>Level <field name="current_level_sequence"/> of <field name="total_levels"/></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Approval Workflow Action -->
    <record id="action_approval_workflow" model="ir.actions.act_window">
        <field name="name">Approval Workflows</field>
        <field name="res_model">approval.workflow</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_approval_workflow_search"/>
        <field name="context">{'search_default_my_workflows': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first approval workflow!
            </p>
            <p>
                Approval workflows help you manage the approval process for various business processes.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_approval_workflows" name="Approval Workflows" parent="base.menu_administration" sequence="10"/>
    <menuitem id="menu_approval_workflows_list" name="All Workflows" parent="menu_approval_workflows" action="action_approval_workflow" sequence="10"/>
    <menuitem id="menu_approval_workflows_my" name="My Workflows" parent="menu_approval_workflows" action="action_approval_workflow" sequence="20"/>
    <menuitem id="menu_approval_workflows_pending" name="Pending My Approval" parent="menu_approval_workflows" action="action_approval_workflow" sequence="30"/>

    <!-- Dashboard View -->
    <record id="view_approval_dashboard" model="ir.ui.view">
        <field name="name">approval.dashboard</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <dashboard string="Approval Dashboard">
                <view type="graph" ref="view_approval_workflow_graph"/>
                <view type="pivot" ref="view_approval_workflow_pivot"/>
                <group>
                    <aggregate name="total_workflows" string="Total Workflows" field="id" type="count"/>
                    <aggregate name="pending_workflows" string="Pending" field="id" type="count" domain="[('state', '=', 'pending')]"/>
                    <aggregate name="approved_workflows" string="Approved" field="id" type="count" domain="[('state', '=', 'approved')]"/>
                    <aggregate name="rejected_workflows" string="Rejected" field="id" type="count" domain="[('state', '=', 'rejected')]"/>
                </group>
            </dashboard>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_approval_workflow_graph" model="ir.ui.view">
        <field name="name">approval.workflow.graph</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <graph string="Approval Workflows" type="bar">
                <field name="state" type="row"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_approval_workflow_pivot" model="ir.ui.view">
        <field name="name">approval.workflow.pivot</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <pivot string="Approval Workflows">
                <field name="workflow_type" type="row"/>
                <field name="state" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_approval_workflow_calendar" model="ir.ui.view">
        <field name="name">approval.workflow.calendar</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <calendar string="Approval Workflows" date_start="request_date" color="state">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="amount"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Gantt View -->
    <record id="view_approval_workflow_gantt" model="ir.ui.view">
        <field name="name">approval.workflow.gantt</field>
        <field name="model">approval.workflow</field>
        <field name="arch" type="xml">
            <gantt string="Approval Workflows" date_start="request_date" date_stop="approved_date" color="state">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="amount"/>
            </gantt>
        </field>
    </record>

</odoo>
