<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Budget Management Tree View -->
    <record id="view_budget_management_tree" model="ir.ui.view">
        <field name="name">budget.management.tree</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <tree string="Budget Management" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-muted="state=='closed'">
                <field name="name"/>
                <field name="code"/>
                <field name="fiscal_year"/>
                <field name="department_id"/>
                <field name="total_budget" sum="Total Budget"/>
                <field name="currency_id" invisible="1"/>
                <field name="committed_amount" sum="Committed"/>
                <field name="actual_amount" sum="Actual"/>
                <field name="available_amount" sum="Available"/>
                <field name="utilization_percentage" string="Utilization %"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-muted="state=='closed'"/>
                <field name="overbudget_count" string="Overbudget"/>
            </tree>
        </field>
    </record>

    <!-- Budget Management Form View -->
    <record id="view_budget_management_form" model="ir.ui.view">
        <field name="name">budget.management.form</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <form string="Budget Management">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_close" string="Close" type="object" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', 'in', ['closed', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Budget Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="fiscal_year"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="project_id"/>
                            <field name="analytic_account_id"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    
                    <!-- Budget Amounts -->
                    <group>
                        <group>
                            <field name="total_budget"/>
                        </group>
                        <group>
                            <field name="committed_amount" readonly="1"/>
                            <field name="actual_amount" readonly="1"/>
                            <field name="available_amount" readonly="1"/>
                            <field name="utilization_percentage" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Budget Settings -->
                    <notebook>
                        <page string="Budget Lines" name="budget_lines">
                            <field name="budget_line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="analytic_account_id"/>
                                    <field name="planned_amount"/>
                                    <field name="committed_amount"/>
                                    <field name="actual_amount"/>
                                    <field name="available_amount"/>
                                    <field name="variance_amount"/>
                                    <field name="variance_percentage"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Settings" name="settings">
                            <group>
                                <group>
                                    <field name="auto_budget_enabled"/>
                                    <field name="auto_commit_enabled"/>
                                    <field name="auto_alert_enabled"/>
                                </group>
                                <group>
                                    <field name="allow_overbudget"/>
                                    <field name="overbudget_threshold"/>
                                    <field name="overbudget_approval_required"/>
                                </group>
                            </group>
                            <group>
                                <field name="alert_thresholds" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                            <group>
                                <field name="notification_recipients" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Commitments" name="commitments">
                            <field name="commitment_ids" readonly="1">
                                <tree string="Budget Commitments" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-warning="state=='confirmed'">
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="description"/>
                                    <field name="module_name"/>
                                    <field name="record_name"/>
                                    <field name="commitment_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Alerts" name="alerts">
                            <field name="alert_ids" readonly="1">
                                <tree string="Budget Alerts" decoration-warning="alert_type=='warning'" decoration-danger="alert_type=='danger'" decoration-muted="state=='resolved'">
                                    <field name="alert_type" widget="badge"/>
                                    <field name="threshold_percentage"/>
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="message"/>
                                    <field name="alert_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Approval" name="approval">
                            <field name="approval_workflow_id" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Budget Management Search View -->
    <record id="view_budget_management_search" model="ir.ui.view">
        <field name="name">budget.management.search</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <search string="Search Budgets">
                <field name="name"/>
                <field name="code"/>
                <field name="fiscal_year"/>
                <field name="department_id"/>
                <field name="project_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Overbudget" name="overbudget" domain="[('committed_amount', '>', 'total_budget')]"/>
                <filter string="Auto Budget Enabled" name="auto_budget" domain="[('auto_budget_enabled', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Fiscal Year" name="group_fiscal_year" context="{'group_by': 'fiscal_year'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Budget Management Kanban View -->
    <record id="view_budget_management_kanban" model="ir.ui.view">
        <field name="name">budget.management.kanban</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <kanban string="Budget Management" class="o_kanban_small_column">
                <field name="state"/>
                <field name="name"/>
                <field name="code"/>
                <field name="total_budget"/>
                <field name="committed_amount"/>
                <field name="available_amount"/>
                <field name="utilization_percentage"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_priority">
                                        <field name="state" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_details">
                                        <div class="o_kanban_record_detail">
                                            <strong>Total Budget:</strong> <field name="total_budget"/> <field name="currency_id"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Committed:</strong> <field name="committed_amount"/> <field name="currency_id"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Available:</strong> <field name="available_amount"/> <field name="currency_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_progress">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" t-att-style="'width: ' + utilization_percentage + '%'"></div>
                                        </div>
                                        <small><field name="utilization_percentage"/>% utilized</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Budget Management Action -->
    <record id="action_budget_management" model="ir.actions.act_window">
        <field name="name">Budget Management</field>
        <field name="res_model">budget.management</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_budget_management_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first budget!
            </p>
            <p>
                Budget management helps you control spending and track commitments across all modules.
            </p>
        </field>
    </record>

    <!-- Budget Line Tree View -->
    <record id="view_budget_line_tree" model="ir.ui.view">
        <field name="name">budget.line.tree</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <tree string="Budget Lines" decoration-success="variance_amount>=0" decoration-danger="variance_amount<0">
                <field name="name"/>
                <field name="account_id"/>
                <field name="analytic_account_id"/>
                <field name="planned_amount" sum="Total Planned"/>
                <field name="committed_amount" sum="Total Committed"/>
                <field name="actual_amount" sum="Total Actual"/>
                <field name="available_amount" sum="Total Available"/>
                <field name="variance_amount" sum="Total Variance"/>
                <field name="variance_percentage"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Budget Line Form View -->
    <record id="view_budget_line_form" model="ir.ui.view">
        <field name="name">budget.line.form</field>
        <field name="model">budget.line</field>
        <field name="arch" type="xml">
            <form string="Budget Line">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_close" string="Close" type="object" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="budget_id"/>
                            <field name="name"/>
                            <field name="account_id"/>
                            <field name="analytic_account_id"/>
                        </group>
                        <group>
                            <field name="planned_amount"/>
                            <field name="committed_amount" readonly="1"/>
                            <field name="actual_amount" readonly="1"/>
                            <field name="available_amount" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="variance_amount" readonly="1"/>
                            <field name="variance_percentage" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Commitments" name="commitments">
                            <field name="commitment_ids" readonly="1">
                                <tree string="Commitments">
                                    <field name="amount"/>
                                    <field name="description"/>
                                    <field name="module_name"/>
                                    <field name="record_name"/>
                                    <field name="commitment_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Budget Commitment Tree View -->
    <record id="view_budget_commitment_tree" model="ir.ui.view">
        <field name="name">budget.commitment.tree</field>
        <field name="model">budget.commitment</field>
        <field name="arch" type="xml">
            <tree string="Budget Commitments" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-warning="state=='confirmed'">
                <field name="budget_id"/>
                <field name="budget_line_id"/>
                <field name="amount" sum="Total Amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="description"/>
                <field name="module_name"/>
                <field name="record_name"/>
                <field name="commitment_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Budget Commitment Form View -->
    <record id="view_budget_commitment_form" model="ir.ui.view">
        <field name="name">budget.commitment.form</field>
        <field name="model">budget.commitment</field>
        <field name="arch" type="xml">
            <form string="Budget Commitment">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', 'in', ['cancelled', 'released'])]}"/>
                    <button name="action_release" string="Release" type="object" class="btn-warning" attrs="{'invisible': [('state', 'not in', ['active', 'confirmed'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,confirmed,cancelled,released"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="budget_id"/>
                            <field name="budget_line_id"/>
                            <field name="amount"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="commitment_date"/>
                            <field name="module_name"/>
                            <field name="record_id"/>
                            <field name="record_name" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="confirmed_date" readonly="1"/>
                        <field name="cancelled_date" readonly="1"/>
                        <field name="released_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Budget Alert Tree View -->
    <record id="view_budget_alert_tree" model="ir.ui.view">
        <field name="name">budget.alert.tree</field>
        <field name="model">budget.alert</field>
        <field name="arch" type="xml">
            <tree string="Budget Alerts" decoration-warning="alert_type=='warning'" decoration-danger="alert_type=='danger'" decoration-muted="state=='resolved'">
                <field name="budget_id"/>
                <field name="budget_line_id"/>
                <field name="alert_type" widget="badge"/>
                <field name="threshold_percentage"/>
                <field name="amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="message"/>
                <field name="alert_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Budget Alert Form View -->
    <record id="view_budget_alert_form" model="ir.ui.view">
        <field name="name">budget.alert.form</field>
        <field name="model">budget.alert</field>
        <field name="arch" type="xml">
            <form string="Budget Alert">
                <header>
                    <button name="action_acknowledge" string="Acknowledge" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_resolve" string="Resolve" type="object" class="btn-success" attrs="{'invisible': [('state', 'not in', ['active', 'acknowledged'])]}"/>
                    <button name="action_dismiss" string="Dismiss" type="object" class="btn-warning" attrs="{'invisible': [('state', 'not in', ['active', 'acknowledged'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,acknowledged,resolved,dismissed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="budget_id"/>
                            <field name="budget_line_id"/>
                            <field name="alert_type"/>
                            <field name="threshold_percentage"/>
                            <field name="amount"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="alert_date" readonly="1"/>
                            <field name="module_name"/>
                            <field name="record_id"/>
                            <field name="record_name" readonly="1"/>
                            <field name="acknowledged_by" readonly="1"/>
                            <field name="acknowledged_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="message" readonly="1"/>
                    </group>
                    <group>
                        <field name="resolution_notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Budget Dashboard View -->
    <record id="view_budget_dashboard" model="ir.ui.view">
        <field name="name">budget.dashboard</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <dashboard string="Budget Dashboard">
                <view type="graph" ref="view_budget_management_graph"/>
                <view type="pivot" ref="view_budget_management_pivot"/>
                <group>
                    <aggregate name="total_budgets" string="Total Budgets" field="id" type="count"/>
                    <aggregate name="active_budgets" string="Active" field="id" type="count" domain="[('state', '=', 'active')]"/>
                    <aggregate name="total_amount" string="Total Budget Amount" field="total_budget" type="sum"/>
                    <aggregate name="committed_amount" string="Committed Amount" field="committed_amount" type="sum"/>
                    <aggregate name="overbudget_count" string="Overbudget" field="overbudget_count" type="sum"/>
                </group>
            </dashboard>
        </field>
    </record>

    <!-- Budget Graph View -->
    <record id="view_budget_management_graph" model="ir.ui.view">
        <field name="name">budget.management.graph</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <graph string="Budget Analysis" type="bar">
                <field name="department_id" type="row"/>
                <field name="total_budget" type="measure"/>
                <field name="committed_amount" type="measure"/>
                <field name="available_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Budget Pivot View -->
    <record id="view_budget_management_pivot" model="ir.ui.view">
        <field name="name">budget.management.pivot</field>
        <field name="model">budget.management</field>
        <field name="arch" type="xml">
            <pivot string="Budget Analysis">
                <field name="fiscal_year" type="row"/>
                <field name="department_id" type="col"/>
                <field name="total_budget" type="measure"/>
                <field name="committed_amount" type="measure"/>
                <field name="utilization_percentage" type="measure"/>
            </pivot>
        </field>
    </record>

</odoo>
