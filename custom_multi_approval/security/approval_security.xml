<odoo>
    <record id="group_approval_manager" model="res.groups">
        <field name="name">Approval Manager</field>
    </record>

    <record id="group_approval_user" model="res.groups">
        <field name="name">Approval User</field>
    </record>

    <record id="approval_request_rule" model="ir.rule">
        <field name="name">Approval Request Access for Approvers</field>
        <field name="model_id" ref="model_custom_approval_request"/>
        <field name="domain_force">[
            '|',
            ('requester_id', '=', user.id),
            ('approval_line_ids.approver_group_id.users', 'in', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('group_approval_user')), (4, ref('group_approval_manager'))]"/>
    </record>
</odoo>
