<odoo>
    <record id="ir_cron_approval_request_reminder" model="ir.cron">
        <field name="name">Approval Request Reminder</field>
        <field name="model_id" ref="model_custom_approval_request"/>
        <field name="state">code</field>
        <field name="code">model.send_reminder_email()</field>
        <field name="interval_type">days</field>
        <field name="interval_number">1</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
