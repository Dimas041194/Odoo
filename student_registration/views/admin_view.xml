<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Bagian 1: Form dan menu Student Registration -->
        <record id="view_student_registration_form" model="ir.ui.view">
            <field name="name">student.registration.form</field>
            <field name="model">student.registration</field>
            <field name="arch" type="xml">
                <form string="Student Registration">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="nik"/>
                            <field name="address"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="student_registration_menu" name="Student Registrations" parent="base.menu_administration"/>

        <record id="action_student_registration" model="ir.actions.act_window">
            <field name="name">Student Registrations</field>
            <field name="res_model">student.registration</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="student_registration_menu_items" name="Registrations" parent="student_registration_menu" action="action_student_registration"/>
    </data>
</odoo>
